#############################
# Core EditorConfig Options #
#############################

root = true

[*]
# charset = utf-8
end_of_line = crlf
trim_trailing_whitespace = false
insert_final_newline = false
indent_style = space
indent_size = 4

############################
# File Extension Settings  #
############################

# JSON and config files
