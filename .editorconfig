#################################
# .NET General Style Guidelines #
#################################

# Expression preferences
dotnet_style_operator_placement_when_wrapping = beginning_of_line #Place binary operators at the beginning of the line when wrapping
dotnet_style_parentheses_in_arithmetic_binary_operators = never_if_unnecessary:none #Do not use parentheses for arithmetic binary operators
dotnet_style_parentheses_in_other_binary_operators = always_for_clarity:none #Use parentheses for other binary operators
dotnet_style_parentheses_in_relational_binary_operators = never_if_unnecessary:none #Do not use parentheses for relational binary operators
dotnet_style_parentheses_in_other_operators = never_if_unnecessary:silent #Do not use parentheses for other operators

# Language features preferences
dotnet_style_predefined_type_for_locals_parameters_members = true:suggestion #Use predefined type for locals, parameters, and members
dotnet_style_predefined_type_for_member_access = true:suggestion #Use predefined type for member access
dotnet_style_qualification_for_event = false:suggestion #Do not qualify event access with the event keyword
dotnet_style_qualification_for_field = false:suggestion #Do not qualify field access with the this keyword
dotnet_style_qualification_for_method = false:suggestion #Do not qualify method access with the this keyword
dotnet_style_qualification_for_property = false:suggestion #Do not qualify property access with the this keyword
dotnet_style_require_accessibility_modifiers = for_non_interface_members:warning #Require accessibility modifiers for non-interface members
dotnet_style_readonly_field = true:warning #Use readonly for mutable fields
dotnet_style_namespace_match_folder = true:suggestion

# Null-checking preferences
dotnet_style_coalesce_expression = true:suggestion #Use coalesce expression
dotnet_style_null_propagation = true:suggestion #Use null propagation
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:suggestion

# Modern language feature preferences
dotnet_style_prefer_auto_properties = true:waring #Use auto-properties
dotnet_style_object_initializer = true:warning #Use object initializer
dotnet_style_collection_initializer = true:warning #Use collection initializer
dotnet_style_prefer_simplified_boolean_expressions = true:suggestion
dotnet_style_prefer_conditional_expression_over_assignment = true:suggestion
dotnet_style_prefer_conditional_expression_over_return = true:suggestion
dotnet_style_explicit_tuple_names = true:suggestion
dotnet_style_prefer_inferred_tuple_names = true:suggestion
dotnet_style_prefer_inferred_anonymous_type_member_names = true:suggestion
dotnet_style_prefer_compound_assignment = true:suggestion
dotnet_style_prefer_simplified_interpolation = true:warning
dotnet_style_prefer_collection_expression = when_types_loosely_match:suggestion
dotnet_code_quality_unused_parameters = all:waring #Report unused parameters

# Experimental options
dotnet_style_allow_statement_immediately_after_block_experimental = true:silent
dotnet_style_allow_multiple_blank_lines_experimental = true:silent

######################
# C# Style Settings #
######################

# var preferences
csharp_style_var_elsewhere = true:warning
csharp_style_var_for_built_in_types = true:warning
csharp_style_var_when_type_is_apparent = true:warning

